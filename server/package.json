{
  "name": "grid-chat-server",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "setup": "npm i && npm run migration:run",
    "build": "npm run codegen && npx tsc",
    "start": "node dist/index.js",
    "dev": "npm run codegen && nodemon",
    "codegen": "graphql-codegen --config codegen-config.ts",
    "db:drop": "typeorm-ts-node-commonjs schema:drop -d ./src/db.ts",
    "migration:generate": "typeorm-ts-node-commonjs -d ./src/db.ts migration:generate ./src/migrations/default",
    "migration:run": "typeorm-ts-node-commonjs -d ./src/db.ts migration:run"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@graphql-tools/schema": "^10.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.4",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.14.3",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.19",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "prisma": "^5.8.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
